    <script>
        @{ string dingdanhao1 = "/yuanshen/检测不同意状态?q=" + Model.订单编号;

        }

            var myvar = setInterval("检测不同意状态()", "3000");
        


        function 检测不同意状态() {

           
            var xmlhttp;
            if (window.XMLHttpRequest) {// code for IE7+, Firefox, Chrome, Opera, Safari
                xmlhttp = new XMLHttpRequest();
            }
            xmlhttp.open("GET",   "@dingdanhao1"    , true);
            xmlhttp.send();

           // document.getElementById("txtHint").innerHTML = "bbbbbbbbbb";
            xmlhttp.onreadystatechange = function () {
                if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {

                     
                   
                  // alert(xmlhttp.responseText);
                 
                

                

                        if (xmlhttp.responseText == "登陆账号中") {


                       $("#订单状态").text("订单状态：登陆账号中,请输入游戏验证码");
                        clearInterval(myvar); return;


                    }

                }
            }
          //  window.location = "/yuanshen/index";
        }

    </script>


</head>
<body class="container">
    @{

        string ddh = "/yuanshen/验证码?dingdanhao=" + Model.订单编号;


    }





    @{ string goodsImg = "../../Content/" + @Model.材料名称 + ".jpg";

    //    int 数量 = (int)@Model.数量;
  //      decimal cc = (decimal)@Model.材料单价;

      //  decimal 金额 = 数量 * cc;

    }
    <div><h3 style="text-align:left ;color:deepskyblue ;margin-bottom:20px"> 订单信息</h3> </div>

    <div class="quyu" style="display: flex; width: 100%; justify-content: space-evenly; background-color: #fff; text-align: center">
        <div class="col-xs-3 col-sm-3 col-md-3" style="background-color: white; ">

            <img src=@goodsImg alt="的法规规定" style="border-radius:25px ;width:80px;padding:10px">
            <div class="text1" style="display:block; white-space: nowrap; text-align:center">   @Model.材料名称  </div>


        </div>
    </div>

    <div>  <p style="display: block; white-space: nowrap; text-align: center;     font-size: 18px;margin-top:20px"> 数量：@Model.数量  </p></div>
    <div>  <p style="display: block; white-space: nowrap; text-align: center;     font-size: 18px"> 总价: @Model.金额 元  </p></div>
    <div>  <p style="display: block; white-space: nowrap; text-align: center;     font-size: 18px"> 下单qq： @Model.qq  </p></div>
    <div>  <p style="display: block; white-space: nowrap; text-align: center;     font-size: 18px"> 游戏账号： @Model.账号  </p></div>
    <div>  <div style="display: block; white-space: nowrap; text-align: center;     font-size: 18px" id="订单状态"> 订单状态： @Model.订单状态  </div></div>
 
    <div>  <p style="display: block; white-space: nowrap; text-align: center;     font-size: 18px"> 打手qq： @Model.打手qq   </p></div>

    <div>  <p style="display: block; white-space: nowrap; text-align: center;     font-size: 18px">验证码： @Model.验证码 </p></div>



    <div>  <p style="display: block; white-space: nowrap; text-align: center;     font-size: 18px"> 订单号：@Model.订单编号  </p></div>


    <div class="col-xs-12 col-sm-12 col-md-12" style=" text-align: center">
        <div style=" white-space: nowrap; font-size:18px;text-align:center">
            <p style="text-align:center"> 有问题，请  <a href="https://qm.qq.com/cgi-bin/qm/qr?k=JVXrJ-dnwXiMb0wEq9qTcjoerokXwJ1H&noverify=0&personal_qrcode_source=4" style="color: deepskyblue">联系我们 <span class="glyphicon glyphicon glyphicon-question-sign" aria-hidden="true" style="text-align:center"> </span></a> </p>

        </div>
    </div>

    <form name="form1" method="post" action=@ddh>
        <div class="row">
            <div class="col-xs-12">
                <input type="text" name="验证码" class="form-control" placeholder="游戏验证码">
            </div>
            <div>   &nbsp;      &nbsp;   &nbsp;   &nbsp;   &nbsp;                   </div>
            <div></div>
            <div class="col-xs-12">
                <button type="button" class="btn btn-primary  btn-block" onclick="form1.action= '@ddh' ;form1.submit();">提交游戏验证码</button>
            </div>

        </div>
    </form>






</body>
</html>
