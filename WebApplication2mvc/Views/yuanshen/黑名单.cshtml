@using WebApplication2mvc.Models
@model  List<黑名单视图>
@{
    Layout = null;
}

<!doctype html>
<html lang="zh-CN">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>原神云代练 原神代肝</title>

    <!-- Bootstrap
    <link rel="stylesheet" href="./css/bootstrap.min.css"  >


        <script src="https://cdn.jsdelivr.cn/npm/jquery@1.12.4/dist/jquery.min.js" ></script>

        <script src="./js/bootstrap.min.js"  ></script>   -->
    <!-- Bootstrap
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    -->


    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <style>




        a {
            color: #000000;
            text-decoration: none;
        }

            a:hover {
                color: #000000;
                text-decoration: none;
            }



        img {
            width: 80px;
            height: 80px;
            padding: 10px;
            background-size: cover;
            border-radius: 25px;
        }





        .foot {
            justify-content: space-around;
            position: fixed;
            bottom: 0px;
        }
    </style>
</head>
<body>

    <div class="title" style="padding: 5px;font-size: 16px;  text-align:left"><p>黑名单查询</p></div>




    <div class="table-responsive">
        <table class="table">
            <caption>黑名单</caption>
            <thead>
                <tr>
                    <th>qq</th>
                    <th>b站昵称</th>
                    <th>b站id</th>
                    <th>游戏uid</th>

                    <th>理由</th>
                    <th>链接</th>


                </tr>
            </thead>
            <tbody>
                @{ int 计数器 = 1;
                    string 颜色 = "";}
                @foreach (黑名单视图 item in Model.ToList())
                {
                    if (计数器 % 4 == 0)
                    {
                        颜色 = "active";
                        计数器 = 计数器 + 1;
                    }
                    else
                    if (计数器 % 4 == 1)
                    {
                        颜色 = "success";
                        计数器 = 计数器 + 1;
                    }
                    else
                    if (计数器 % 4 == 2)
                    {
                        颜色 = "warning";
                        计数器 = 计数器 + 1;
                    }
                    else
                    if (计数器 % 4 == 3)
                    {
                        颜色 = "danger";
                        计数器 = 计数器 + 1;
                    }

                    <tr class="@颜色">
                        <td>@item.隐藏qq</td>
                        <td>@item.b站昵称</td>
                        <td>@item.b站id</td>
                        <td>@item.隐藏游戏uid</td>
                        <td>@item.理由</td>


                        <td> <a href=" @item.链接">@item.链接 </a></td>






                    </tr>

                }

            </tbody>
        </table>
    </div>





    <form action="/yuanshen/添加黑名单" method="post" name="form1">


        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"
                                aria-hidden="true">
                            ×
                        </button>
                        <h4 class="modal-title" id="myModalLabel">
                            录入黑名单
                        </h4>
                    </div>
                    <div class="modal-body">
                        请填写黑名单信息
                        <input type="text" name="举报人qq" style=" " class="form-control" placeholder="请输入管理员账号">
                        <input type="text" name="qq" style=" " class="form-control" placeholder="请输入骗子qq">
                        <input type="text" name="b站昵称" class="form-control" placeholder="请输入骗子b站昵称">
                        <input type="text" name="b站id" class="form-control" placeholder="请输入骗子b站id">
                        <input type="text" name="游戏uid" class="form-control" placeholder="请输入骗子游戏uid">
                        <input type="text" name="理由" class="form-control" placeholder="请输入理由">

                        <input type="text" name="链接" class="form-control" placeholder="请输入链接">


                        <input type="text" name="日期" style="display:none" id="date_info" class="form-control" placeholder="请输入日期">

                        <script>
                            $(document).ready(function () {
                                var time = new Date();
                                var day = ("0" + time.getDate()).slice(-2);
                                var month = ("0" + (time.getMonth() + 1)).slice(-2);
                                var m = ("0" + (time.getMinutes() + 1)).slice(-2);
                                var h = ("0" + (time.getHours())).slice(-2);
                                var s = ("0" + (time.getSeconds() + 1)).slice(-2);
                                var today = time.getFullYear() + "-" + (month) + "-" + (day) + " " + (h) + ":" + (m) + ":" + (s);
                                $('#date_info').val(today);
                            })
                        </script>
                    </div>



                    <div class="modal-footer">

                        <button type="button" class="btn btn-primary" onclick="form1.action= '/yuanshen/添加黑名单' ;form1.submit();">
                            确定
                        </button>
                        <button type="button" class="btn btn-default"
                                data-dismiss="modal">
                            取消
                        </button>


                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->



    </form>


    <div>&nbsp;</div>
    <div>&nbsp;</div>
    <div>&nbsp;</div>
    <div>&nbsp;</div>
    <div>&nbsp;</div>
    <div>&nbsp;</div>





    <footer class="footer navbar-fixed-bottom" style="text-align:center;">


        <div class="container" style="text-align:center;  ">


            <div class="row" style="text-align:center">


                <div class=" " data-toggle="modal" data-target="#myModal">
                    <div class="col-xs-12 col-sm-12 col-md-12" style="background-color: white; ">

                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true" style="font-size: 30px;width: 80px;
                padding: 10px;
                background-size: cover;
                border-radius: 25px;"></span>
                        <div class="text1" style="display:block; white-space: nowrap;"> 添加黑名单</div>

                    </div>
                </div>



                </div>



            </div>



    </footer>


</body>
</html>
