    <style>
        body {
            margin: 0 auto;
            padding: 0;
            background-color: #f7f8fa;
        }


        .aaa {
            width: 390px;
            margin: 0 auto;
            padding: 0;
            background-color: #f6f6f6;
        }


        a {
            color: #000000;
            text-decoration: none;
        }

            a:hover {
                color: #000000;
                text-decoration: none;
            }

        .text {
            padding: 20px;
        }

        .text1 {
            padding: 2px;
        }

        img {
            width: 80px;
            padding: 10px;
            background-size: cover;
            border-radius: 25px;
        }

        .img {
            position: relative;
            margin: 0 auto;
            background-image: url(paimeng2.jpg);
            width: 100%;
            width: 490px;
            height: 170px;
            background-size: 100%;
            background-repeat: no-repeat;
        }


        .dibu {
            width: 100%;
            display: flex;
            align-items: center;
            background-color: rgb(240, 232, 232);
            justify-content: space-around;
            position: fixed;
            bottom: 0px;
            padding: 10px;
        }

        .footer1 {
            width: 100%;
            text-align: center;
            background-color: rgb(240, 232, 232);
            justify-content: space-around;
            position: fixed;
            bottom: 0px;
            padding: 10px;
        }
    </style>
</head>
<body class="container">


    @{ string goodsImg = "../../Content/" + @Model.材料名称 + ".jpg";


    }



    <div class="quyu" style="display: flex; width: 100%; justify-content: space-evenly; background-color: #fff; text-align: center">
        <div class="col-xs-3 col-sm-3 col-md-3" style="background-color: white; ">

            <img src=@goodsImg alt="的法规规定">
            <div class="text1" style="display:block; white-space: nowrap; text-align:center">   @Model.材料名称 * @Model.数量</div>


        </div>
    </div>


    <div>  <p style="display: block; white-space: nowrap; text-align: center;     font-size: 18px"> 订单号：@Model.订单编号  </p></div>

    <div> <h3 style="display:block; white-space: nowrap; text-align:center;color:green">请选择支付方式</h3></div>
    @{ var bb = @Model.数量;
        var cc = @ViewBag.材料单价;

        var dd = bb * cc;

        string ddh = "/yuanshen/跳转微信支付?dingdanhao=" + @Model.订单编号;
    }

    @{
    }


    <div style="text-align:right;color:red;font-size:18px;font-weight:700;margin-top:20px">  价格： @dd  元 </div>

    <div class="col-xs-12 col-sm-12 col-md-12" style="background-color: white; margin-top:20px ">
        <a href=@ddh class="btn btn-primary" role="button " style="width:100%; background-color:green ;height:70px"><p style="padding:20px ; font-weight:700;font-size:18px">微信支付</p></a>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-12" style="background-color: white; margin-top: 20px">
        <a href=@ddh class="btn btn-primary" role="button" style="width: 100%; background-color: dodgerblue; height: 70px "><p style="padding: 20px; font-weight: 700; font-size: 18px">支付宝支付</p></a>
    </div>




</body>
</html>
